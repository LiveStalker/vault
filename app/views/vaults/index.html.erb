<%= render :partial => 'nav' %>

<h2>Password Vault</h2>
<% if @master_password %>
    <div class="autoscroll">
      <table class="list vault">
        <thead>
        <tr>
          <th>Host</th>
          <th>Login</th>
          <th>Password</th>
          <th>Created by</th>
          <th>Notes</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @vault_passwords.each do |password| %>
            <tr>
              <td><%= password.host %></td>
              <td><%= vault_decrypt(password.login, @master) %></td>
              <td>
                <span class="vault-password"><%= vault_decrypt(password.password, @master) %></span>
                <!--a href="#" title="copy" class="icon icon-copy password-copy"></a--><a href="#" title="show/hide" class="icon icon-unlock password-lock"></a>
              </td>
              <td><%= password.user %></td>
              <td><%= password.notes %></td>
              <td>
                <%= link_to "", {:action => 'edit', :id => password.id}, :class => 'icon icon-edit', :accesskey => accesskey(:edit) %>
                <!--a href="#" class="icon icon-del">Delete</a-->
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>
<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'vaults', :plugin => 'password_vault' %>
    <%= javascript_include_tag 'vaults', :plugin => 'password_vault' %>
<% end %>
