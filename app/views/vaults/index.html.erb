<%= render :partial => 'nav' %>

<h2>Password Vault</h2>
<% if @master_password %>
    <div class="autoscroll">
      <table class="list vault">
        <thead>
        <tr>
          <th>Host</th>
          <th>Login</th>
          <th>Password</th>
          <th>Who create</th>
          <th>Notes</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @vault_passwords.each do |password| %>
            <tr>
              <td><%= password.host %></td>
              <td><%= password.login %></td>
              <td>
                <span class="vault-password"><%= password.password %></span>
                <a href="#" title="copy" class="icon icon-copy"></a><a href="#" title="show" class="icon icon-unlock"></a>
              </td>
              <td><%= password.user %></td>
              <td><%= password.notes %></td>
              <td>
                <%= link_to "", {:action => 'edit', :id => password.id}, :class => 'icon icon-edit', :accesskey => accesskey(:edit) %>
                <a href="#" class="icon icon-del">Delete</a>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>
