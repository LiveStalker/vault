<%= error_messages_for @vault %>

<div class="box tabular">
  <p><%= f.text_field :host, :require => false, :value => "#{@vault.host || ''}" %></p>

  <p><%= f.text_field :login, :require => true, :value => "#{@vault.login || ''}" %></p>

  <p><%= f.text_field :password, :require => true, :value => "#{@vault.password || ''}" %></p>

  <p><%= f.check_box :private, :require => false, :value => "#{@vault.private || 0}" %></p>

  <p><%= f.text_area :notes, :required => false, :cols => 40, :value => "#{@vault.notes || ''}", :rows => 15, :class => 'wiki-edit' %></p>

  <p><%= f.hidden_field :master, :required => true, :value => "#{@master}" %></p>

  <p><%= render :partial => 'attachments/form' %></p>
</div>

